.recommend-song-container .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommend-song-container .header image {
  width: 100%;
  height: 100%;
}
.recommend-song-container .header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.recommend-song-container .header .date .day {
  display: inline-block;
  font-size: 46rpx;
  margin-right: 10rpx;
}
.recommend-song-container .list-container {
  position: relative;
  top: -20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0 20rpx;
}
.recommend-song-container .list-container .list-header {
  height: 80rpx;
  line-height: 80rpx;
}
.recommend-song-container .list-container .list-header .multiple-choice {
  float: right;
}
.recommend-song-container .list-container .list-scroll {
  height: calc(100vh - 380rpx);
}
.recommend-song-container .list-container .list-scroll .scroll-item {
  display: flex;
  margin-bottom: 20rpx;
}
.recommend-song-container .list-container .list-scroll .scroll-item image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.recommend-song-container .list-container .list-scroll .scroll-item .music-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.recommend-song-container .list-container .list-scroll .scroll-item .music-info text {
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recommend-song-container .list-container .list-scroll .scroll-item .iconfont {
  width: 80rpx;
  height: 80rpx;
  text-align: right;
  line-height: 80rpx;
}

