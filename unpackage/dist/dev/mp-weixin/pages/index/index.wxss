.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
.nav-container {
  display: flex;
  justify-content: space-evenly;
}
.nav-container .nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav-container .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #f01313;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.nav-container .nav {
  font-size: 26rpx;
}
.recommend-container {
  padding: 10rpx 20rpx;
}
.recommend-container .recommend-song {
  display: flex;
  margin-top: 10rpx;
  height: 300rpx;
}
.recommend-container .recommend-song .scroll-item {
  width: 200rpx;
  margin-right: 10rpx;
}
.recommend-container .recommend-song .scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.recommend-container .recommend-song .scroll-item text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.top-list {
  padding: 10rpx 20rpx;
  border-top: 1px solid #eee;
}
.top-list swiper {
  height: 450rpx;
}
.top-list swiper .swiper-item {
  background: #fbfbfb;
}
.top-list swiper .swiper-item .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.top-list swiper .swiper-item .music-item {
  display: flex;
  margin-bottom: 20rpx;
}
.top-list swiper .swiper-item .music-item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}
.top-list swiper .swiper-item .music-item .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-right: 20rpx;
}
.top-list swiper .swiper-item .music-item .music-name {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  min-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

