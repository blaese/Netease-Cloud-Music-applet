.personal-container {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.personal-container .user-section {
  position: relative;
  height: 520rpx;
  padding: 100rpx 30rpx 0;
}
.personal-container .user-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  -webkit-filter: blur(1px);
          filter: blur(1px);
}
.personal-container .user-section .user-info-box {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  height: 180rpx;
}
.personal-container .user-section .user-info-box .portrait {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}
.personal-container .user-section .user-info-box .username {
  font-size: 24;
  color: #303133;
}
.personal-container .vip-card-box {
  display: flex;
  flex-direction: column;
  position: relative;
  height: 240rpx;
  color: #f7d680;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16px 16px 0 0;
  padding: 20rpx 24rpx;
}
.personal-container .vip-card-box .card-bg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.personal-container .vip-card-box .b-btn {
  position: absolute;
  top: 16rpx;
  right: 20rpx;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36343c;
  border-radius: 20rpx;
  background: #f9e6af;
  z-index: 1;
}
.personal-container .vip-card-box .title {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #f7d680;
  margin-bottom: 28rpx;
}
.personal-container .vip-card-box .title .iconfont {
  color: #f6e5a3;
  margin-right: 16rpx;
}
.personal-container .vip-card-box .e-m {
  font-size: 34rpx;
  margin-top: 10rpx;
}
.personal-container .vip-card-box .e-b {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #d8cba9;
}
.personal-container .cover-container {
  margin-top: -150rpx;
  padding: 0 30rpx 20rpx;
  position: relative;
  background: #f5f5f5;
}
.personal-container .cover-container .arc {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}
.personal-container .cover-container .nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}
.personal-container .cover-container .nav-section .nav-item {
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.personal-container .cover-container .nav-section .nav-item .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}
.personal-container .cover-container .nav-section .nav-item text:last-child {
  font-size: 22rpx;
}
.personal-container .cover-container .personal-content {
  background: #fff;
  margin-top: 20rpx;
}
.personal-container .cover-container .personal-content .recent-play-container .title {
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}
.personal-container .cover-container .personal-content .recent-play-container .recent-scroll {
  display: flex;
  height: 200rpx;
}
.personal-container .cover-container .personal-content .recent-play-container .recent-scroll .recent-item {
  margin-left: 20rpx;
}
.personal-container .cover-container .personal-content .recent-play-container .recent-scroll .recent-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.personal-container .cover-container .personal-content .recent-play-container .notice {
  margin-left: 20rpx;
  font-size: 34rpx;
}
.personal-container .cover-container .personal-content .card-list {
  margin-top: 20rpx;
}
.personal-container .cover-container .personal-content .card-list .card-item {
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.personal-container .cover-container .personal-content .card-list .card-item .more {
  float: right;
}

