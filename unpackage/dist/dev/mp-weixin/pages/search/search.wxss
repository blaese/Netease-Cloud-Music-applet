.search-container {
  padding: 0 20rpx;
}
.search-container .header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.search-container .header .search-input {
  position: relative;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.search-container .header .search-input .search-icon {
  position: absolute;
  left: 15rpx;
}
.search-container .header .search-input input {
  margin-left: 60rpx;
  height: 60rpx;
}
.search-container .header .search-input .placeholder {
  font-size: 28rpx;
}
.search-container .header .search-input .clear {
  position: absolute;
  right: 30rpx;
  top: 0;
  z-index: 10;
}
.search-container .header .cancel {
  width: 100rpx;
  text-align: center;
}
.search-container .show-search .search-keywords {
  height: 80rpx;
  color: #d43c33;
  line-height: 80rpx;
  border-bottom: 1px solid #d43c33;
  font-size: 24rpx;
}
.search-container .show-search .search-list .search-item {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.search-container .show-search .search-list .search-item .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 26rpx;
}
.search-container .search-history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  margin: 20rpx 0;
}
.search-container .search-history .history {
  height: 50rpx;
  font-size: 28rpx;
}
.search-container .search-history .history-item {
  height: 50rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  background-color: #ededed;
  border-radius: 20rpx;
  margin: 0 0 20rpx 20rpx;
}
.search-container .search-history .delete {
  position: absolute;
  bottom: 20rpx;
  right: 15rpx;
}
.search-container .hot-container {
  margin-top: 30rpx;
}
.search-container .hot-container .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}
.search-container .hot-container .hot-list {
  display: flex;
  flex-wrap: wrap;
}
.search-container .hot-container .hot-list .hot-item {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.search-container .hot-container .hot-list .hot-item .order {
  margin: 0 10rpx;
}
.search-container .hot-container .hot-list .hot-item .icon-img {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

